<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGrayNight</item>
        <item name="colorPrimaryDark">@color/darkGrayNight</item>
        <item name="colorPrimaryVariant">@color/darkGrayNight</item>
        <item name="colorOnPrimary">?android:attr/textColorPrimary</item>
        <item name="android:windowBackground">@color/darkGrayNight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">?android:attr/textColorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkGrayNight</item>
        <!-- 设置ToolBar返回按钮的颜色 -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- 继承自AppTheme，占满全屏 -->
    <style name="AppTheme.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 状态栏移除内容覆盖层 -->
        <item name="android:statusBarColor">
            @null
        </item>
        <!-- 不要标题栏 -->
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>

</resources>