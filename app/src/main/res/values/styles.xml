<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="popup">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="bottom_popup">
        <item name="android:windowEnterAnimation">@anim/bottom_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_popup_exit</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme.FullScreen">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
    </style>

</resources>